<div class="cont">
  <div class="inner_cont">
    <div class="text" style="margin-right: 100px;">
      <p style="font-size: 25px;"> Order At Your Convenience </p>
      <p style="font-size: 45px;">Get At Your Footsteps</p>
    </div>
    <div class="img">
      <img class="header_img" src="header_home.png" alt="Tiffin service"  style="height: 80%;">
    </div>
    
  </div>
</div>




    


    <div class="box1">

      <div class="card" style="width: 50%; " >
        <img src="tiffin.jpg" style="height: 200px;"  class="card-img-top" alt="food">
        <div class="card-body">
          <h5 class="card-title">Tiffin</h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
      



      <%dishes.forEach(function(dish){%>
        <div class="card" style="width: 18rem; margin: 5px;">
          <img src="food/<%=dish.img%>.jpg" style="height: 200px;"  class="card-img-top" alt="food">
          <div class="card-body">
            <h5 class="card-title" ><%=dish.name%></h5>
            <p class="card-text" >Rs.<%=dish.price%></p>
            <button data-dish="<%= JSON.stringify(dish) %>" name="id" value="<%=dish.name%>"  type="submit" class="btn btn-primary " id="add-to-cart">ADD</button>
          </div>
        </div>
        <% }) %> 

    </div>


    





    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    
    

    <script src="add-to-cart.js"></script>
</body>
